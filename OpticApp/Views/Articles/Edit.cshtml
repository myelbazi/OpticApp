@model OpticApp.Models.Article

@{
    ViewData["Title"] = "Edit";
}

    <div class="row">
        <form asp-action="Edit" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="span12">

                <div class="widget ">

                    <div class="widget-header">
                        <i class="icon-user"></i>
                        <h3>Edition de l'article</h3>
                    </div> <!-- /widget-header -->

                    <div class="widget-content">


                        <fieldset>
                            <input type="hidden" asp-for="ID" />
                            <div class="control-group">
                                <label asp-for="code" class="control-label"></label>
                                <div class="controls">
                                    <input asp-for="code" class="span3" />
                                    <span asp-validation-for="code" class="help-block"></span>
                                </div> <!-- /controls -->
                            </div>


                            <div class="control-group">
                                <label asp-for="libelleArticle" class="control-label"></label>
                                <div class="controls">
                                    <input asp-for="libelleArticle" class="span3" />
                                    <span asp-validation-for="libelleArticle" class="help-block"></span>
                                </div> <!-- /controls -->
                            </div>

                            <div class="control-group">
                                <label asp-for="prixAchat" class="control-label"></label>
                                <div class="controls">
                                    <input asp-for="prixAchat" class="span3" />
                                    <span asp-validation-for="prixAchat" class="help-block"></span>
                                </div> <!-- /controls -->
                            </div>

                            <div class="control-group">
                                <label asp-for="prixVenteHT" class="control-label"></label>
                                <div class="controls">
                                    <input asp-for="prixVenteHT" class="span3" />
                                    <span asp-validation-for="prixVenteHT" class="help-block"></span>
                                </div> <!-- /controls -->
                            </div>

                            <div class="control-group">
                                <label asp-for="stock" class="control-label"></label>
                                <div class="controls">
                                    <input asp-for="stock" class="span3" />
                                    <span asp-validation-for="stock" class="help-block"></span>
                                </div> <!-- /controls -->
                            </div>
                            <div class="control-group">
                                <label asp-for="typeArticleID" class="control-label"></label>
                                <div class="controls">
                                    <select asp-for="typeArticleID" class="form-control span3" asp-items="ViewBag.typeArticleID"></select>

                                </div> <!-- /controls -->
                            </div>
                            <div class="control-group">
                                <label asp-for="fournisseurID" class="control-label"></label>
                                <div class="controls">
                                    <select asp-for="fournisseurID" class="form-control span3" asp-items="ViewBag.fournisseurID"></select>

                                </div> <!-- /controls -->
                            </div>
                            <br />
                            <div class="form-actions">

                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a class="btn" asp-action="Index">Retour à la Liste</a>
                            </div>



                        </fieldset>



                    </div> <!-- /widget-content -->

                </div>
            </div>


        </form>
    </div>








