@model IEnumerable<OpticApp.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <form asp-action="Create" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="span12">

            <div class="widget ">

                <div class="widget-header">
                    <i class="icon-user"></i>
                    <h3>Liste des articles</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">
                    <fieldset>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th> @Html.DisplayNameFor(model => model.code) </th>
                                    <th> @Html.DisplayNameFor(model => model.libelleArticle)</th>
                                    <th>  @Html.DisplayNameFor(model => model.typeArticle) </th>
                                    <th> @Html.DisplayNameFor(model => model.fournisseur)</th>
                                    <th class="td-actions"> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @Html.DisplayFor(modelItem => item.code) </td>
                                        <td>  @Html.DisplayFor(modelItem => item.libelleArticle) </td>
                                        <td>  @Html.DisplayFor(modelItem => item.typeArticle.libelleTypeArticle) </td>
                                        <td>  @Html.DisplayFor(modelItem => item.fournisseur.nomFournisseur) </td>
                                        @*<td class="td-actions"><a href="javascript:;" class="btn btn-small btn-success"><i class="btn-icon-only icon-ok"> </i></a><a href="javascript:;" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a></td>*@
                                        <td class="td-actions">
                                            @*<a href="javascript:;" class="btn btn-small btn-success"><i class="btn-icon-only icon-ok"> </i></a>
                            <a href="javascript:;" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a>*@

                                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-small btn-success"><i class="btn-icon-only icon-edit"> </i></a>
                                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-small btn-success"><i class="btn-icon-only icon-folder-open"> </i></a>
                                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <br />
                        <a asp-action="Create" class="btn  btn-success"><i class="btn-icon-only icon-plus"> </i> Nouveau</a>
                       
                    </fieldset>


                </div> <!-- /widget-content -->

            </div>
        </div>
    </form>


</div>





