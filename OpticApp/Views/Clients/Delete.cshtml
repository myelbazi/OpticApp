@model OpticApp.Models.Client

@{
    ViewData["Title"] = "Delete";
}


<div class="row">
    <form class="form-horizontal" asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="span12">

            <div class="widget ">

                <div class="widget-header">
                    <i class="icon-user"></i>
                    <h3>Suppression du client</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">


                    <fieldset>
                        <div class="control-group">
                            <label asp-for="nom" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="nom" class="span6 " readonly />

                            </div> <!-- /controls -->
                        </div>


                        <div class="control-group">
                            <label asp-for="prenom" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="prenom" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>

                        <div class="control-group">
                            <label asp-for="tel" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="tel" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>

                        <div class="control-group">
                            <label asp-for="adresse" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="adresse" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>

                        <div class="control-group">
                            <label asp-for="ville" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="ville" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>

                        <div class="control-group">
                            <label asp-for="mail" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="mail" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>

                        <div class="control-group">
                            <label asp-for="dateNaissance" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="dateNaissance" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>

                        <div class="control-group">
                            <label asp-for="sexe" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="sexe" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>

                        <div class="control-group">
                            <label asp-for="profession" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="profession" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>

                        <div class="control-group">
                            <label asp-for="remarque" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="remarque" class="span6 " readonly />
                            </div> <!-- /controls -->
                        </div>
                        <br />
                        <div class="form-actions">

                            <input type="submit" value="Supprimer" class="btn btn-danger" />
                            <a class="btn" asp-action="Index">Retour à la Liste</a>

                            


                        </div>

                    </fieldset>



                </div> <!-- /widget-content -->

            </div>
        </div>


    </form>


</div>


