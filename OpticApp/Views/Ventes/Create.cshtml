@model OpticApp.Models.Vente

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="visiteID" class="control-label"></label>
                <select asp-for="visiteID" class ="form-control" asp-items="ViewBag.visiteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="articleID" class="control-label"></label>
                <select asp-for="articleID" class ="form-control" asp-items="ViewBag.articleID"></select>
            </div>
            <div class="form-group">
                <label asp-for="articlePositionID" class="control-label"></label>
                <select asp-for="articlePositionID" class ="form-control" asp-items="ViewBag.articlePositionID"></select>
            </div>
            <div class="form-group">
                <label asp-for="montant" class="control-label"></label>
                <input asp-for="montant" class="form-control" />
                <span asp-validation-for="montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
