@model OpticApp.Models.Fournisseur

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <form class="form-horizontal" asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="span12">

            <div class="widget ">

                <div class="widget-header">
                    <i class="icon-user"></i>
                    <h3>Suppression du fournisseur</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">


                    <fieldset>
                        <div class="control-group">
                            <label asp-for="nomFournisseur" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="nomFournisseur" class="span6 " readonly />

                            </div> <!-- /controls -->
                        </div>
                        <br />
                        <div class="form-actions">

                            <input type="submit" value="Supprimer" class="btn btn-danger" />
                            <a class="btn" asp-action="Index">Retour à la Liste</a>




                        </div>

                    </fieldset>



                </div> <!-- /widget-content -->

            </div>
        </div>


    </form>


</div>





