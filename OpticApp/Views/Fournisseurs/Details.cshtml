@model OpticApp.Models.Fournisseur

@{
    ViewData["Title"] = "Details";
}


<div class="row">
    <form class="form-horizontal">

        <div class="span12">

            <div class="widget ">

                <div class="widget-header">
                    <i class="icon-user"></i>
                    <h3>Détail du fournisseur</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">


                    <fieldset>
                        <div class="control-group">
                            <label asp-for="nomFournisseur" class="control-label"></label>
                            <div class="controls">
                                <input asp-for="nomFournisseur" class="span6 " readonly />

                            </div> <!-- /controls -->
                        </div>





                        <br />
                        <div class="form-actions">

                            @*<input type="submit" value="Save" class="btn btn-primary" />*@
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
                            <a class="btn" asp-action="Index">Retour à la Liste</a>




                        </div>

                    </fieldset>



                </div> <!-- /widget-content -->

            </div>
        </div>


    </form>


</div>





